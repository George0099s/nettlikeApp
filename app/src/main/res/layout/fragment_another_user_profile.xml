<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"

    android:layout_height="match_parent"
    tools:context=".people.ui.AnotherUserProfileFrament">

    <TextView
        android:id="@+id/user_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/hello_blank_fragment"
        android:textColor="@color/black000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/aboutUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="20dp"
        android:text="TextView"
        android:textColor="@color/black000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_job" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/tag_another_user"
        app:layout_constraintTop_toBottomOf="@+id/tag_another_user">

        <ImageView
            android:id="@+id/send_email_another"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"

            android:src="@drawable/ic_email" />

        <ImageView
            android:id="@+id/send_facebook_another"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_facebook" />

        <ImageView
            android:id="@+id/send_twitter_another"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_twitter" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tag_another_user"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/aboutUser"
        app:layout_constraintStart_toStartOf="@+id/aboutUser"
        app:layout_constraintTop_toBottomOf="@+id/aboutUser" />
</androidx.constraintlayout.widget.ConstraintLayout>