<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.avla.app"
    android:targetSandboxVersion="1">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".nettlikeApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme2"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="n">
        <activity android:name=".view.main.profileInnerFragments.UserActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".view.main.GetTagsActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".view.main.PostInfoActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".view.followers.FollowersActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".view.main.CreatePostActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".view.main.CreateEventActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".view.main.EventInfoActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".view.signUp.SignUpChooseTagActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".view.signUp.SignUpChooseCategoryActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".view.signUp.SignUpCountryActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            />
        <activity android:name=".view.DialogActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".view.main.peopleInner.AnotherUserProfileActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".view.main.profileInnerFragments.EditUserProfileActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".view.signUp.LocationCitiesActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".profile.ProfileActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".authorization.SignUp"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".authorization.RegistrationActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".OnBoarding"
            android:noHistory="true"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".StartActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"
                    />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"
            />

        <service android:name=".service.PushService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>